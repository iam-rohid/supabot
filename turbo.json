{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^db:generate", "^db:deploy", "^build"],
      "env": ["*", "DATABASE_URL"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "env": ["DATABASE_URL"],
      "cache": false
    },
    "db:deploy": {
      "env": ["DATABASE_URL"],
      "cache": false
    },
    "db:studio": {
      "env": ["DATABASE_URL"],
      "cache": false
    }
  }
}
